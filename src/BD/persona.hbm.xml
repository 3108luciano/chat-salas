<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="BD.Persona" table="PERSONA">

		<id column="idPersona" name="idPersona" type="int">
			<generator class="increment" />
		</id>
		<property column="email" name="email" not-null="true" type="string" />
		<property column="contraseña" name="contraseña" not-null="true" type="string" />
		<property column="nick" name="nick" not-null="true" type="string" />

	</class>

</hibernate-mapping>